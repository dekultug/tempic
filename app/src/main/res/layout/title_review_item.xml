<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivTitleReviewClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16"
        android:src="@drawable/ic_close_cricle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleReviewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginEnd="@dimen/dimen_20"
        android:fontFamily="@font/notosans_semi_bold"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_text_size_16"
        app:layout_constraintBottom_toBottomOf="@id/ivTitleReviewClose"
        app:layout_constraintEnd_toStartOf="@id/ivTitleReviewClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivTitleReviewClose"
        tools:text="Tôi đã tìm thấy bảng màu cuộc sống của mình!" />

    <TextView
        android:id="@+id/tvTitleReviewDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_text_size_16"
        android:layout_marginTop="@dimen/dimen_8"
        android:fontFamily="@font/notosans_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleReviewTitle"
        tools:text="@string/test_text_long" />

    <TextView
        android:id="@+id/tvTitleReviewTimePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8"
        android:fontFamily="@font/notosans_regular"
        android:textColor="@color/gray_light"
        android:textSize="@dimen/dimen_12"
        app:layout_constraintStart_toStartOf="@id/tvTitleReviewDescription"
        app:layout_constraintTop_toBottomOf="@id/tvTitleReviewDescription"
        tools:text="2022-05-31 13:59" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_margin="@dimen/dimen_12"
        android:background="@color/gray_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleReviewTimePost" />

</androidx.constraintlayout.widget.ConstraintLayout>
