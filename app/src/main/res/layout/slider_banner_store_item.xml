<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpSliderBannerStore"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivSliderBannerStoreAdd"
        android:layout_width="@dimen/dimen_24"
        android:layout_height="@dimen/dimen_24"
        android:layout_margin="@dimen/dimen_20"
        android:background="@drawable/shape_oval_bg_transparent_dark"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="@id/vpSliderBannerStore"
        app:layout_constraintEnd_toEndOf="@id/vpSliderBannerStore" />

    <TextView
        android:id="@+id/tvSliderStoreNumberPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_6"
        android:background="@drawable/shape_bg_transparent_dark_corner_16"
        android:fontFamily="@font/notosans_medium"
        android:paddingHorizontal="@dimen/dimen_8"
        android:paddingVertical="@dimen/dimen_2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/ivSliderBannerStoreAdd"
        app:layout_constraintEnd_toStartOf="@id/ivSliderBannerStoreAdd"
        app:layout_constraintTop_toTopOf="@id/ivSliderBannerStoreAdd"
        tools:text="@string/page_slider" />

</androidx.constraintlayout.widget.ConstraintLayout>
