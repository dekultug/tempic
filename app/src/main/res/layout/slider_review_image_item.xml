<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSliderReviewImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <me.relex.circleindicator.CircleIndicator2
        android:id="@+id/ciSliderReviewImage"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_48"
        app:ci_gravity="center"
        app:ci_width="@dimen/dimen_4"
        app:ci_height="@dimen/dimen_4"
        app:ci_drawable="@drawable/shape_oval_bg_ci_main_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvSliderReviewImage" />

</androidx.constraintlayout.widget.ConstraintLayout>
